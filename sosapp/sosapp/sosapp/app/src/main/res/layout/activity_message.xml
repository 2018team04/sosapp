<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.jc469638.sosapp.MessageActivity">

    <Button
        android:id="@+id/template"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="78dp"
        android:fontFamily="cursive"
        android:text="Template"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/addmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/template"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:fontFamily="cursive"
        android:text="edit message"
        android:textColor="@android:color/background_dark" />

    <ImageView
        android:id="@+id/messi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/addmsg"
        android:layout_alignEnd="@+id/temp"
        android:layout_alignTop="@+id/template"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/message" />

    <ImageView
        android:id="@+id/temp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/addmsg"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/addmsg"
        android:layout_marginStart="62dp"
        app:srcCompat="@drawable/template" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="26dp"
        android:fontFamily="cursive"
        android:text="Message"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold" />
</RelativeLayout>
